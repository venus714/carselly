<h1>New Post</h1>

<%= form_with model: @post, local: true, html: { multipart: true } do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :images %><br>
    <%= f.file_field :images, multiple: true %>
  </p>

  <p>
    <%= f.submit "Create Post" %>
  </p>
<% end %>

<%= link_to "Back to posts", posts_path %>
